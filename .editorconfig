# Root-level config
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Dockerfile
[*.{dockerfile,Dockerfile}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Node.js
[*.{js,jsx,json,ts}]
indent_size = 2

# python
[*.py]
indent_size = 4

# YAML
[*.yml]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
indent_size = 2

# Windows scripts
[*.ps1]
end_of_line = crlf
